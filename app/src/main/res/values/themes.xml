    </style>

    <style name="Title.md">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Title.sm">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body">
    </style>

    <style name="Body.lg">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.md">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body.md.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body.sm.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body.sm">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body.lg.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Body.lg.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Body.lg.semi_bold">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="Lable">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Lable.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Lable.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Lable.semi_bold">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>



    <style name="Label">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Label.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Label.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Label.semi_bold">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

</resources>