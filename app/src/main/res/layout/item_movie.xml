<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.adapters.MovieInteractionListener" />

        <variable
            name="item"
            type="com.karrar.movieapp.ui.models.MediaUiState" />

        <variable
            name="type"
            type="com.karrar.movieapp.domain.enums.HomeItemsType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie_image"
            android:layout_width="@dimen/media_card_width"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/spacing_small"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1.4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:background="@color/yellow"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->listener.onClickMovie(item.id)}"
            app:posterImage="@{item.imageUrl}"
            app:layout_constraintBottom_toTopOf="@id/movie_name"
            app:shapeAppearanceOverlay="@style/CardCorners.Medium" />
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/movie_image"
            app:layout_constraintStart_toStartOf="@id/movie_image"
            app:layout_constraintEnd_toEndOf="@id/movie_image"
            android:text="@{item.name}"
            tools:text="The Flaha"
            style="@style/Body.md.medium"
            android:textColor="@color/shade_secondary"
            android:layout_marginTop="8dp"
            android:textAlignment="textStart"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>