<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.home.HomeInteractionListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            style="@style/Title.sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_should_i_watch"
            android:textColor="@color/shade_primary"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:background="@drawable/explore_section_bg"
            android:onClick="@{()->listener.onClickExploreSection()}"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_icon_shape"
                android:backgroundTint="@color/shade_quinary">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/magic_icon_cd"
                    android:src="@drawable/ic_magic" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Title.sm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/let_us_choose_for_you"
                    android:textColor="@color/shade_primary" />

                <TextView
                    style="@style/Body.md"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/we_ll_help_you_skip_the_scroll_and_go_nstraight_to_the_good_stuff"
                    android:textColor="@color/shade_secondary" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/arrow_right"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>
</layout>