<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.karrar.movieapp.ui.actorDetails.SocialMediaItemUiState" />

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.adapters.MovieInteractionListener" />
        <variable
            name="handler"
            type="com.karrar.movieapp.ui.actorDetails.ActorDetailsInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        app:cardCornerRadius="@dimen/radius_full"
        android:onClick="@{()->handler.onClickSocialMedia(item.url)}"
        android:background="@color/shade_quinary"
        android:layout_marginEnd="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/social_media_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:iconRes="@{item.iconRes}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/social_media_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.name}"
                style="@style/Lable.medium"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="6dp"
                android:textColor="@color/shade_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/social_media_icon"
                app:layout_constraintStart_toEndOf="@id/social_media_icon"
                app:layout_constraintTop_toTopOf="@id/social_media_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
