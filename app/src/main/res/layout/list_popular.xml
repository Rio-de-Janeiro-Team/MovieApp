<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="adapterRecycler"
            type="com.karrar.movieapp.ui.home.adapter.PopularMovieAdapter" />

    </data>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2_popular_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_extra_large"
        android:layout_marginTop="@dimen/spacing_medium"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="24dp"
        app:viewPagerAdapter="@{adapterRecycler}"
        app:setupCarousel="@{adapterRecycler}"
        tools:listitem="@layout/item_popular_movie" />

</layout>