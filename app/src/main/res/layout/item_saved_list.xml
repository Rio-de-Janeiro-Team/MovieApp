<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.karrar.movieapp.ui.myList.myListUIState.CreatedListUIState" />

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.myList.CreatedListInteractionListener" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginVertical="@dimen/spacing_small"
        android:onClick="@{()->listener.onListClick(item)}"
        app:cardCornerRadius="@dimen/radius_small"
        app:cardElevation="0dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/collection_item_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/spacing_medium"
                android:src="@drawable/ic_folder"
                app:tint="@color/brand_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9.5dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Body.md.medium"
                    android:textColor="@color/shade_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{item.name}"
                    tools:text="Action movies" />

                <TextView
                    style="@style/Body.sm.regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="@{@string/items(item.mediaCounts)}"
                    tools:text="14 items" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/shade_tertiary"
                android:adjustViewBounds="true"
                android:layout_marginEnd="12dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>
</layout>