<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>

        <item name="actionBarTheme">@style/MyTheme</item>
        <item name="textInputStyle">@style/Login</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/background_card</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:textColorHint">@color/shade_secondary</item>
        <item name="hintTextAppearance">@style/Body.md.medium</item>
        <item name="startIconTint">@color/shade_secondary</item>
        <item name="endIconTint">@color/shade_secondary</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/additional_primary_red</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_states_button</item>
        <item name="android:textColor">@color/button_on_primary</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonSecondaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_secondary</item>
        <item name="android:textColor">@color/button_on_secondary</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_corners</item>
    </style>

</resources>